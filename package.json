{
    "name": "code-background",
    "displayName": "Code Background",
    "description": "Background for VSCode",
    "publisher": "Katsute",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "vscode": "^1.68.1"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:code-background.install",
        "onCommand:code-background.uninstall",
        "onCommand:code-background.config",
        "onCommand:code-background.config.file",
        "onCommand:code-background.config.align",
        "onCommand:code-background.config.loop",
        "onCommand:code-background.config.opacity",
        "onCommand:code-background.config.repeat",
        "onCommand:code-background.config.size"
    ],
    "contributes": {
        "commands": [
            {
                "command": "code-background.install",
                "title": "Install",
                "category": "Code Background"
            },
            {
                "command": "code-background.uninstall",
                "title": "Uninstall",
                "category": "Code Background"
            },
            {
                "command": "code-background.config",
                "title": "Configuration",
                "category": "Code Background"
            },
            {
                "command": "code-background.config.file",
                "title": "Select images",
                "category": "Code Background"
            },
            {
                "command": "code-background.config.align",
                "title": "Set background image alignment",
                "category": "Code Background"
            },
            {
                "command": "code-background.config.loop",
                "title": "Set image loop duration",
                "category": "Code Background"
            },
            {
                "command": "code-background.config.opacity",
                "title": "Set UI opacity",
                "category": "Code Background"
            },
            {
                "command": "code-background.config.repeat",
                "title": "Set background image repeat",
                "category": "Code Background"
            },
            {
                "command": "code-background.config.size",
                "title": "Set background image size",
                "category": "Code Background"
            }
        ],
        "configuration": {
            "title": "Code Background",
            "order": 0,
            "properties": {
                "code-background.files": {
                    "title": "Files",
                    "markdownDescription": "The list of files or globs to pull background images from. **Only `/` can be used for paths**, `\\` is reserved for escape characters.",
                    "type": "array",
                    "order": 0,
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "code-background.align": {
                    "title": "Alignment",
                    "markdownDescription": "How to align the background image.",
                    "type": "string",
                    "default": "Center Center",
                    "enum": [
                        "Top Left",
                        "Top Center",
                        "Top Right",
                        "Center Left",
                        "Center Center",
                        "Center Right",
                        "Bottom Left",
                        "Bottom Center",
                        "Bottom Right"
                    ]
                },
                "code-background.loop": {
                    "title": "Loop",
                    "markdownDescription": "How often the background image should be changed in seconds, set to `0` to never change the image.",
                    "type": "number",
                    "default": 0,
                    "minimum": 0
                },
                "code-background.opacity": {
                    "title": "Opacity",
                    "markdownDescription": "The UI opacity, make sure this number is not to low, otherwise you may not be able to see the UI and revert this change.",
                    "type": "number",
                    "default": 1,
                    "minimum": 0,
                    "maximum": 1
                },
                "code-background.repeat": {
                    "title": "Repeat",
                    "markdownDescription": "How to repeat the background image.",
                    "type": "string",
                    "default": "No Repeat",
                    "enum": [
                        "No Repeat",
                        "Repeat",
                        "Repeat X",
                        "Repeat Y",
                        "Repeat Space",
                        "Repeat Round"
                    ],
                    "enumDescriptions": [
                        "Do not repeat",
                        "Repeat X/Y",
                        "Repeat X",
                        "Repeat Y",
                        "Repeat with even spacing to fill the screen",
                        "Repeat and stretch images to fill the screen"
                    ]
                },
                "code-background.size": {
                    "title": "Size",
                    "markdownDescription": "How to size the background image.",
                    "type": "string",
                    "default": "Auto",
                    "enum": [
                        "Auto",
                        "Contain",
                        "Cover",
                        "Manual"
                    ],
                    "enumDescriptions": [
                        "Original image size",
                        "Fit image to the screen",
                        "Stretch image to fill the screen",
                        "Manual size"
                    ]
                },
                "code-background.size-css": {
                    "title": "Background size",
                    "markdownDescription": "If the background size is set to `Manual`, this is the literal value for the `background-size` property.",
                    "type": "string",
                    "default": ""
                }
            }
        }
    },
    "main": "dist/extension.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "rimraf dist & rimraf dist",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update -D && npm i --package-lock --ignore-scripts && npm run prune",
        "// -- build -- //": "",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc --outDir dist",
        "build": "npm run compile",
        "prepare": "npm run clean && npm run build",
        "// -- test -- //": "",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "npm run pretest",
        "// -- deploy -- //": "",
        "package": "vsce package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KatsuteDev/code-background.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0-only",
    "bugs": {
        "url": "https://github.com/KatsuteDev/code-background/issues"
    },
    "homepage": "https://github.com/KatsuteDev/code-background#readme",
    "devDependencies": {
        "@types/glob": "7.2.0",
        "@types/node": "18.0.0",
        "@types/vscode": "1.68.0",
        "glob": "8.0.3",
        "rimraf": "3.0.2",
        "typescript": "4.7.4",
        "vsce": "2.9.2"
    }
}
