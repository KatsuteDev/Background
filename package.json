            "order": 0,
            "properties": {
                "background.windowBackgrounds": {
                    "markdownDescription": "The list of files, globs, or URLs to pull background images from. **Only `/` can be used for paths**, `\\` is reserved for escape characters. Image URLs must be served over HTTPS.",
                    "type": "array",
                    "order": 0,
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "background.windowBackgroundAlignment": {
                    "markdownDescription": "The background image alignment.",
                    "type": "string",
                    "order": 1,
                    "default": "Center Center",
                    "enum": [
                        "Top Left",
                        "Top Center",
                        "Top Right",
                        "Center Left",
                        "Center Center",
                        "Center Right",
                        "Bottom Left",
                        "Bottom Center",
                        "Bottom Right",
                        "Manual"
                    ]
                },
                "background.windowBackgroundAlignmentValue": {
                    "markdownDescription": "If `#background.windowBackgroundAlignment#` is set to `Manual`, this is the literal value for the `background-position` css property.",
                    "type": "string",
                    "order": 2,
                    "default": ""
                },
                "background.windowBackgroundBlur": {
                    "markdownDescription": "The background image blur amount in css units.",
                    "type": "string",
                    "order": 3,
                    "default": "0"
                },
                "background.windowBackgroundOpacity": {
                    "markdownDescription": "The UI opacity, make sure this number is not to low, otherwise you may not be able to see the UI and revert this change.",
                    "type": "number",
                    "order": 4,
                    "default": 0.9,
                    "minimum": 0,
                    "maximum": 1
                },
                "background.windowBackgroundRepeat": {
                    "markdownDescription": "The background image repeat.",
                    "type": "string",
                    "order": 5,
                    "default": "No Repeat",
                    "enum": [
                        "No Repeat",
                        "Repeat",
                        "Repeat X",
                        "Repeat Y",
                        "Repeat Space",
                        "Repeat Round"
                    ],
                    "enumDescriptions": [
                        "Do not repeat",
                        "Repeat X/Y",
                        "Repeat X",
                        "Repeat Y",
                        "Repeat with even spacing to fill the screen",
                        "Repeat and stretch images to fill the screen"
