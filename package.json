{
    "name": "code-background",
    "displayName": "%name%",
    "description": "%description%",
    "icon": "assets/icon-sm.png",
    "galleryBanner": {
        "color": "#0098FF",
        "theme": "dark"
    },
    "publisher": "Katsute",
    "version": "3.0.0",
    "private": true,
    "engines": {
        "vscode": "^1.92.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "bg",
        "bk",
        "background",
        "cover",
        "theme",
        "image",
        "gif"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "extensionKind": [
        "ui"
    ],
    "contributes": {
        "commands": [
            {
                "command": "background.install",
                "title": "%contributes.command.install%",
                "category": "Background"
            },
            {
                "command": "background.uninstall",
                "title": "%contributes.command.uninstall%",
                "category": "Background"
            },
            {
                "command": "background.reload",
                "title": "%contributes.command.reload%",
                "category": "Background"
            },
            {
                "command": "background.config",
                "title": "%contributes.command.configuration%",
                "category": "Background"
            },
            {
                "command": "background.changelog",
                "title": "%contributes.command.changelog%",
                "category": "Background"
            },
            {
                "command": "background.help",
                "title": "%contributes.command.help%",
                "category": "Background"
            }
        ],
        "configuration": {
            "title": "%name%",
            "order": 0,
            "properties": {
                "background.windowBackgrounds": {
                    "markdownDescription": "%contributes.configuration.windowBackgrounds%",
                    "type": "array",
                    "order": 0,
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "background.editorBackgrounds": {
                    "markdownDescription": "%contributes.configuration.editorBackgrounds%",
                    "type": "array",
                    "order": 1,
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "background.sidebarBackgrounds": {
                    "markdownDescription": "%contributes.configuration.sidebarBackgrounds%",
                    "type": "array",
                    "order": 2,
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "background.panelBackgrounds": {
                    "markdownDescription": "%contributes.configuration.panelBackgrounds%",
                    "type": "array",
                    "order": 3,
                    "default": [],
                    "items": {
                        "type": "string"
                    }
                },
                "background.backgroundAlignment": {
                    "markdownDescription": "%contributes.configuration.backgroundAlignment%",
                    "type": "array",
                    "order": 4,
                    "default": [
                        "Center Center",
                        "Center Center",
                        "Center Center",
                        "Center Center"
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "string",
                        "enum": [
                            "Top Left",
                            "Top Center",
                            "Top Right",
                            "Center Left",
                            "Center Center",
                            "Center Right",
                            "Bottom Left",
                            "Bottom Center",
                            "Bottom Right",
                            "Manual"
                        ]
                    }
                },
                "background.backgroundAlignmentValue": {
                    "markdownDescription": "%contributes.configuration.backgroundAlignmentValue%",
                    "type": "array",
                    "order": 5,
                    "default": [
                        "50%",
                        "50%",
                        "50%",
                        "50%"
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "string",
                        "pattern": "^[\\w.% +-]*$"
                    }
                },
                "background.backgroundBlur": {
                    "markdownDescription": "%contributes.configuration.backgroundBlur%",
                    "type": "array",
                    "order": 6,
                    "default": [
                        "0",
                        "0",
                        "0",
                        "0"
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "string",
                        "pattern": "^[\\w.% +-]*$"
                    }
                },
                "background.backgroundOpacity": {
                    "markdownDescription": "%contributes.configuration.backgroundOpacity%",
                    "type": "array",
                    "order": 7,
                    "default": [
                        0.1,
                        0.1,
                        0.1,
                        0.1
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    }
                },
                "background.backgroundRepeat": {
                    "markdownDescription": "%contributes.configuration.backgroundRepeat%",
                    "type": "array",
                    "order": 8,
                    "default": [
                        "No Repeat",
                        "No Repeat",
                        "No Repeat",
                        "No Repeat"
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "string",
                        "enum": [
                            "No Repeat",
                            "Repeat",
                            "Repeat X",
                            "Repeat Y",
                            "Repeat Space",
                            "Repeat Round"
                        ],
                        "enumDescriptions": [
                            "%contributes.configuration.backgroundRepeat.NR%",
                            "%contributes.configuration.backgroundRepeat.R%",
                            "%contributes.configuration.backgroundRepeat.RX%",
                            "%contributes.configuration.backgroundRepeat.RY%",
                            "%contributes.configuration.backgroundRepeat.RS%",
                            "%contributes.configuration.backgroundRepeat.RR%"
                        ]
                    }
                },
                "background.backgroundSize": {
                    "markdownDescription": "%contributes.configuration.backgroundSize%",
                    "type": "array",
                    "order": 9,
                    "default": [
                        "Cover",
                        "Cover",
                        "Cover",
                        "Cover"
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "string",
                        "enum": [
                            "Auto",
                            "Contain",
                            "Cover",
                            "Manual"
                        ],
                        "enumDescriptions": [
                            "%contributes.configuration.backgroundSize.Auto%",
                            "%contributes.configuration.backgroundSize.Contain%",
                            "%contributes.configuration.backgroundSize.Cover%",
                            "%contributes.configuration.backgroundSize.Manual%"
                        ]
                    }
                },
                "background.backgroundSizeValue": {
                    "markdownDescription": "%contributes.configuration.backgroundSizeValue%",
                    "type": "array",
                    "order": 10,
                    "default": [
                        "100%",
                        "100%",
                        "100%",
                        "100%"
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "string",
                        "pattern": "^[\\w.% +-]*$"
                    }
                },
                "background.backgroundChangeTime": {
                    "markdownDescription": "%contributes.configuration.backgroundChangeTime%.",
                    "type": "array",
                    "order": 11,
                    "default": [
                        0,
                        0,
                        0,
                        0
                    ],
                    "minItems": 4,
                    "maxItems": 4,
                    "items": {
                        "type": "number",
                        "minimum": 0
                    }
                },
                "background.autoInstall": {
                    "markdownDescription": "%contributes.configuration.autoInstall%",
                    "order": 12,
                    "type": "boolean",
                    "default": false
                },
                "background.renderContentAboveBackground": {
                    "markdownDescription": "%contributes.configuration.renderContentAboveBackground%",
                    "order": 13,
                    "type": "boolean",
                    "default": false
                },
                "background.useInvertedOpacity": {
                    "markdownDescription": "%contributes.configuration.useInvertedOpacity%",
                    "order": 14,
                    "type": "boolean",
                    "default": false
                },
                "background.smoothImageRendering": {
                    "markdownDescription": "%contributes.configuration.smoothImageRendering%",
                    "order": 15,
                    "type": "boolean",
                    "default": false
                },
                "background.settingScope": {
                    "markdownDescription": "%contributes.configuration.settingScope%",
                    "order": 16,
                    "type": "string",
                    "enum": [
                        "Global",
                        "Workspace"
                    ],
                    "default": "Global"
                },
                "background.CSS": {
                    "markdownDescription": "%contributes.configuration.CSS%",
                    "order": 17,
                    "type": "string",
                    "editPresentation": "multilineText",
                    "default": ""
                }
            }
        }
    },
    "main": "dist/index.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "rimraf --glob dist & rimraf --glob code-background-*.vsix",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update -D && npm i --package-lock --ignore-scripts && npm run prune",
        "// -- build -- //": "",
        "vscode:prepublish": "npm run prepare",
        "build:esbuild": "esbuild src/extension.ts --bundle --outfile=dist/index.js --external:vscode --format=cjs --platform=node --minify --legal-comments=none --metafile=meta.json",
        "build:localization": "node localization.js",
        "build:post": "node build.js",
        "build": "tsc --noEmit && npm run build:esbuild && npm run build:localization && npm run build:post",
        "prepare": "npm run clean && npm run build",
        "// -- deploy -- //": "",
        "package": "vsce package"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KatsuteDev/Background.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0-only",
    "bugs": {
        "url": "https://github.com/KatsuteDev/Background/issues"
    },
    "homepage": "https://github.com/KatsuteDev/Background#readme",
    "devDependencies": {
        "@types/node": "22.5.0",
        "@types/tmp": "0.2.6",
        "@types/vscode": "1.92.0",
        "@vscode/sudo-prompt": "9.3.1",
        "@vscode/test-electron": "2.4.1",
        "@vscode/vsce": "3.0.0",
        "esbuild": "0.23.1",
        "glob": "11.0.0",
        "rimraf": "6.0.1",
        "tmp": "0.2.3",
        "typescript": "5.5.4"
    }
}
